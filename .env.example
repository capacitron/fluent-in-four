# ===========================================
# Fluent in Four - Environment Variables
# ===========================================
# Copy this file to .env and fill in your values

# -----------------
# Database
# -----------------
# PostgreSQL connection string
DATABASE_URL=postgresql://user:password@localhost:5432/fluent_in_four

# -----------------
# JWT Configuration
# -----------------
# Secret keys for signing tokens (minimum 32 characters each)
# Generate with: openssl rand -base64 32
JWT_SECRET=your-super-secret-jwt-key-minimum-32-chars
JWT_REFRESH_SECRET=your-super-secret-refresh-key-minimum-32-chars

# Token expiration times
JWT_ACCESS_EXPIRES=15m
JWT_REFRESH_EXPIRES=30d

# -----------------
# Application
# -----------------
NODE_ENV=development
PORT=3000
CLIENT_URL=http://localhost:5173
API_URL=http://localhost:3000/api

# -----------------
# Admin Setup (Optional)
# -----------------
# Set these to create an admin user on first run
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=your-admin-password-min-8-chars

# -----------------
# OAuth (Optional - Future)
# -----------------
# Google OAuth
# GOOGLE_CLIENT_ID=
# GOOGLE_CLIENT_SECRET=

# Apple OAuth
# APPLE_CLIENT_ID=
# APPLE_TEAM_ID=
# APPLE_KEY_ID=
# APPLE_PRIVATE_KEY=
